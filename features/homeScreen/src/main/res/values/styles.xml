<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="locationsFragmentTitleBackgroundImageViewStyle">
        <item name="android:importantForAccessibility">no</item>
    </style>

    <style name="locationsFragmentHeaderTextStyle">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">39sp</item>
        <item name="android:maxHeight">50dp</item>
        <item name="android:maxWidth">279dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/oswald_light</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:shadowColor">@color/black_25</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="locationsFragmentLocationTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintEnabled">false</item>
        <item name="hintTextAppearance">@style/hintTextAppearance</item>
        <item name="android:background">@drawable/location_text_input_layout_background</item>
        <item name="android:layout_margin">18dp</item>
    </style>

    <style name="hintTextAppearance">
        <item name="android:textColor">@color/transparent</item>
        <item name="android:textSize">0sp</item>
    </style>

    <style name="locationsFragmentLocationTextInputEditTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="locationsFragmentLocationsRecyclerViewStyle">
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/main_background</item>
    </style>

    <style name="locationsListItemTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintEnabled">false</item>
        <item name="hintTextAppearance">@style/hintTextAppearance</item>
        <item name="endIconDrawable">@drawable/add_location</item>
    </style>

    <style name="locationsListItemTextInputEditTextStyle">
        <item name="android:textSize">23sp</item>
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textColor">@color/locations_list_item_text_color</item>
    </style>

    <style name="locationsListItemImagesLinearLayoutStyle">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:paddingBottom">14dp</item>
    </style>

    <style name="locationsListItemImageStyle">
        <item name="android:clickable">true</item>
        <item name="android:clipToOutline" tools:targetApi="s">true</item>
        <item name="android:foreground">@drawable/white_ripple</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="siv_indicator_size">30dp</item>
    </style>

    <style name="baseLinearLayoutStyle">
        <item name="elevation">5dp</item>
        <item name="android:background">@drawable/location_list_item_background</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="addLocationImageViewStyle">
        <item name="android:contentDescription">@string/add_location</item>
        <item name="android:foreground">@drawable/white_ripple</item>
    </style>

    <style name="removeButtonTextViewStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginHorizontal">65dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/remove_button_background</item>
        <item name="android:foreground">@drawable/white_ripple</item>
        <item name="android:translationZ">5dp</item>
        <item name="android:textAppearance">@style/removeButtonTextViewTextAppearance</item>
    </style>

    <style name="removeButtonTextViewTextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ubuntu_medium</item>
        <item name="android:textSize">17sp</item>
        <item name="android:visibility">gone</item>
    </style>
</resources>